<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:MarketCoin"
       x:DataType="local:Markets"
       x:Class="MarketCoin.AppShell"
       Shell.BackgroundColor="{DynamicResource ShelBackgrountColor}"
       >
    <TabBar>
        <Tab 
            Icon="https://cdn-icons-png.flaticon.com/32/6744/6744989.png"
            Title="Markets">
            <ShellContent Route="TabMarkets" x:Name="ShellContentMarkets" ContentTemplate="{DataTemplate local:Markets}">
            </ShellContent>
        </Tab>
         <Tab x:Name="TabPagePortfolio"
             Icon="https://cdn-icons-png.flaticon.com/32/5751/5751045.png"
             Title="Portfolio">
            <ShellContent  Route="TabPortfolio" x:Name="ShellContentPortfolio" >
            </ShellContent>
        </Tab>
    </TabBar>
</Shell>
