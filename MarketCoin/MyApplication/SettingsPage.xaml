<!--Test Currencies-->
        <Frame
               CornerRadius="15"
               BackgroundColor="{DynamicResource BackgroundColor}"
               HeightRequest="80"
               Margin="15,10,15,0"
               >
            <Grid ColumnDefinitions="auto,*,auto">
                <Label  HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        FontFamily="OpenSansSemibold"
                        Grid.Column="0"
                        FontSize="20"
                        TextColor="{DynamicResource TextColor}"
                        Text="Dark Mode">
                </Label>
                 <Switch
                        Toggled="SwitchTheme_Toggled"
                        x:Name="SwitchTheme"
                        OnColor="#576CBC"
                        Margin="20,0,40,0"
                        HeightRequest="30"
                        WidthRequest="30"
                        BackgroundColor="Transparent"
                        Grid.Column="3">
                </Switch>
            </Grid>
        </Frame>
        <Frame
               x:Name="LogOut"
               IsVisible="false"
               CornerRadius="15"
               BackgroundColor="{DynamicResource BackgroundColor}"
               HeightRequest="80"
               Margin="15,10,15,0"
               >
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="ClickedLogOut"></TapGestureRecognizer>
            </Frame.GestureRecognizers>
            <Grid ColumnDefinitions="auto,*,auto">
                <Label  HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        FontFamily="OpenSansSemibold"
                        Grid.Column="0"
                        FontSize="20"
                        TextColor="{DynamicResource TextColor}"
                        Text="Log Out">
                </Label>
                 <Image
                        Loaded="Image_Loaded"
                        VerticalOptions="Center"
                        HorizontalOptions="EndAndExpand"
                        Source="https://cdn-icons-png.flaticon.com/512/1828/1828479.png"
                        HeightRequest="35"
                        WidthRequest="35"
                        Margin="0,0,10,0"
                        BackgroundColor="Transparent"
                        Grid.Column="3">
                     <Image.Behaviors>
                         <toolkit:IconTintColorBehavior x:Name="LogOutImage">
                         </toolkit:IconTintColorBehavior>
                     </Image.Behaviors>
                </Image>
            </Grid>
        </Frame>
        <Frame
               CornerRadius="15"
               BackgroundColor="{DynamicResource BackgroundColor}"
               HeightRequest="80"
               Margin="15,10,15,0"
               >
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapAboutUs"></TapGestureRecognizer>
            </Frame.GestureRecognizers>
            <Grid ColumnDefinitions="auto,*,auto">
                <Label  HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        FontFamily="OpenSansSemibold"
                        Grid.Column="0"
                        FontSize="20"
                        TextColor="{DynamicResource TextColor}"
                        Text="About Us">
                </Label>
                 <Image
                        VerticalOptions="Center"
                        HorizontalOptions="EndAndExpand"
                        Source="https://cdn-icons-png.flaticon.com/512/992/992686.png"
                        HeightRequest="45"
                        WidthRequest="45"
                        Margin="0,0,10,0"
                        BackgroundColor="Transparent"
                        Grid.Column="3">
                     <Image.Behaviors>
                         <toolkit:IconTintColorBehavior x:Name="AboutUsImage">
                         </toolkit:IconTintColorBehavior>
                     </Image.Behaviors>
                </Image>
            </Grid>
        </Frame>
       
    </StackLayout>
</ContentPage>
